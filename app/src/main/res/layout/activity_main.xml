<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view_navigate_destination_x_coordinate_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/destination_x_coordinate"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/view_navigate_destination_x_coordinate_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/require"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view_navigate_destination_y_coordinate_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/destination_y_coordinate"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/view_navigate_destination_y_coordinate_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/require"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view_navigate_destination_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/destination_name"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/view_navigate_destination_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view_navigate_POI_id_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/POI_id_name"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/view_navigate_POI_id_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/view_navigate_exit_on_arrive_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit_on_arrived"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/view_navigate_execute_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="@string/execute"/>



</LinearLayout>